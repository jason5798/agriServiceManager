<%- include ../extend/sb_header %>
	<div class="row">
		<div class="col-md-12 column">

		    <form method = "post" id="unitList" name="unitList">
		         <div class="panel panel-default">
					<div class="panel-heading">
						<h3>建立新帳號</h3>
					</div>
				  <div class="panel-body">
				  	<div class="col-md-3 column">
				      <!-- Username -->
				      <label class="control-label"  for="username">帳號</label>
				      <div class="controls">
				        <input type="text" id="username" name="username" placeholder="請輸入帳號" class="input-xlarge">
				      </div>
				    </div>
				    <div class="col-md-3 column">
				      <!-- Password-->
				      <label class="control-label" for="password">密碼</label>
				      <div class="controls">
				        <input type="password" id="password" name="password" placeholder="請輸入密碼" class="input-xlarge">
				      </div>
				    </div>
				    <div class="col-md-3 column">
				      <!-- Password-->
				      <br>
				      <button type="button" name="add" class="btn btn-primary btn-sm" onClick="createAccount()">
							<span class="fa fa-user-plus"></span> 新增帳號
						</button>
				    </div>
				  </div>
				</div>

				<table id ="table1" class="table table-striped table-hover">
					<thead>
						<tr>
							<th>
								帳號
							</th>
							<th>
								許可
							</th>
							<th>
								日期
							</th>
							<th>
							</th>
						</tr>
					</thead>
					<tbody>
					<% if (users) { %>
						<% for(var i = 0;i<users.length;i++) { %>
							<tr>
								<td>
									<%= users[i].name %>
								</td>
								<td>
								    <% if(users[i].enable) { %>
										<input type="checkbox" name="enable" value="enable" checked onchange="enableCheck(<%= i%>,this)">
									<% }else { %>
										<input type="checkbox" name="enable" value="enable" onchange="enableCheck(<%= i%>,this)">
									<% } %>
								</td>
								<td>
									<%= users[i].date %>
								</td>
								<td>
									<button type="button" name="edit" class="btn btn-primary btn-sm" onClick="editCheck(<%= i %>,'<%= users[i].name %>')">
										 編輯
									</button>
									<button type="button" name="del" class="btn btn-danger btn-sm" onClick="delCheck(<%= i %>,'<%= users[i].name %>')">
										刪除
									</button>
								</td>
							</tr>
						<% } %>
					<% } %>
					</tbody>
				</table>
				<input id="postSelect" name="postSelect" type="hidden"">
				<input id="postName" name="postName" type="hidden">
            </form>

		</div> <!-- column-->
	</div>	<!--row-->

<!-- （Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header " style="background-color:#ff4d4d;">
						<button type="button" class="close"
						data-dismiss="modal" aria-hidden="true">
							&times;
						</button>
						<h3 class="modal-title" id="myModalLabel">
							<p style="color:white">Warning</p>
						</h3>
					</div>
         <div id="account" class="modal-body">
            Are you sure you want to delete the account?
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default"
               data-dismiss="modal">Cancel
            </button>
            <button type="button" onClick="toSubmit()" class="btn btn-danger">
               YES
            </button>
         </div>
      </div><!-- /.modal-content -->
</div><!-- /.modal -->


<%- include ../extend/sb_footer %>